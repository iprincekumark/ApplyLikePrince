# ApplyLikePrince Environment Configuration
# Copy this file to .env and fill in your values

# ============== DATABASE ==============
# PostgreSQL (Production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=applylikeprince
DB_USERNAME=your_username
DB_PASSWORD=your_secure_password

# ============== SECURITY ==============
# JWT Secret (Generate a strong random string - minimum 256 bits)
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-for-security

# JWT Token Expiration (in milliseconds)
JWT_ACCESS_TOKEN_EXPIRATION=86400000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ============== AI CONFIGURATION ==============
# OpenAI API Key (Get from https://platform.openai.com)
OPENAI_API_KEY=sk-your-openai-api-key

# OR Google AI (Gemini) API Key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ============== FILE STORAGE ==============
# Upload directory for resumes
UPLOAD_DIR=/var/applylikeprince/uploads

# Max file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# ============== SERVER ==============
SERVER_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============== AUTOMATION ==============
# Chrome WebDriver path (for Selenium)
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver

# Browser headless mode (true for production)
BROWSER_HEADLESS=true

# ============== RATE LIMITING ==============
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============== MAIL (Optional) ==============
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ============== FRONTEND ==============
VITE_API_URL=/api
